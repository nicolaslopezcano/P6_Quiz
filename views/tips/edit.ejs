<h1>
    Edit tips:
</h1>

<form method="post" action="/quizzes/<%= quiz.id%>/tips/<%= tip.id%>?_method=PUT">

    <div class="wideRow">
        <label for="text">Tip to edit:</label>
        <input type="text" id="text"
               name="text" value="<%= tip.text %>"
               placeholder="Tip" autocomplete="off"/>
    </div>

    <br/>
    <a href="/goback"><button type="button">Cancel</button></a>

    <input type="submit" value="Save">


</form>